<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <gradient
                android:startColor="@color/ColorImagenFondoPrimario"
                android:endColor="@color/ColorImagenFondoSecundario"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/ColorImagenBorde" />

            <corners
                android:bottomRightRadius="10dip"
                android:bottomLeftRadius="10dip"
                android:topLeftRadius="10dip"
                android:topRightRadius="10dip"/>

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="0dp"
                android:bottom="5dp" />


        </shape>
    </item>

</selector>