<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="policar.policarappv6.PedidoActualActivity"
    tools:showIn="@layout/app_bar_pedido_actual"
    android:background="@drawable/dra_fondo"
    >


    <ScrollView
        android:background="@drawable/dra_fondo_contenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CapScroll"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/CapContenidoScroll"
            android:weightSum="1" >

            <LinearLayout
                android:id="@+id/CapContenidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dra_fondo_contenido"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/CapPedidoActualTipoAccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ImgPedidoActualTipoAccion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_tipo_taxi150" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/CapClienteNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/icon_cliente120" />

                    <TextView
                        android:id="@+id/CmpClienteNombre"
                        style="@style/est_pedido_actual_cliente_nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/CmpNumero"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="0.61"
                        android:gravity="left"
                        android:text="NOMBRE DEL CLIENTE"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/CapPedidoDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/icon_direccion120" />

                    <TextView
                        android:id="@+id/CmpPedidoDireccion"
                        style="@style/est_pedido_actual_direccion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView25"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="0.9"
                        android:gravity="left"
                        android:text="DIRECCION DEL PEDIDO"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/CapPedidoReferencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/icon_referencia120" />

                    <TextView
                        android:id="@+id/CmpConductorNombre"
                        style="@style/est_pedido_actual_referencia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView28"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="0.9"
                        android:gravity="left"
                        android:text="REFERENCIA DEL PEDIDO"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/CapPedidoActualLugarCompra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/icon_tienda120" />

                    <TextView
                        android:id="@+id/CmpPedidoActualLugarCompra"
                        style="@style/est_pedido_actual_cliente_nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/CmpNumero"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="0.61"
                        android:gravity="left"
                        android:text="LUGAR DE COMPRA"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/CapClienteCelular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/icon_celular120" />

                    <TextView
                        android:id="@+id/CmpClienteCelular"
                        style="@style/est_pedido_actual_cliente_celular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView31"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="0.45"
                        android:gravity="left"
                        android:text="952216928"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/CapPedidoDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView27"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/icon_detalle120" />

                    <TextView
                        android:id="@+id/CmpPedidoDetalle"
                        style="@style/est_pedido_actual_detalle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/CmpNumero"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="0.61"
                        android:gravity="left"
                        android:text="DETALLE DE COMPRA"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/CapPedidoActualCronometro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView41"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/icon_cronometro120" />

                    <Chronometer
                        android:id="@+id/CroTardanza"
                        style="@style/est_pedido_actual_cronometro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00:00" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/CapPedidoTiempoDistancia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/CapPedidoDistancia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView32"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/icon_distancia120" />

                        <TextView
                            android:id="@+id/CmpPedidoDistancia"
                            style="@style/est_pedido_actual_detalle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/CmpNumero"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:gravity="left"
                            android:text="0.0 km"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/CapPedidoTiempo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView31"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/icon_tiempo120" />

                        <TextView
                            android:id="@+id/CmpPedidoTiempo"
                            style="@style/est_pedido_actual_detalle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/CmpNumero"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_weight="0.61"
                            android:gravity="left"
                            android:text="0 min"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CapBotones1"
        android:layout_below="@+id/CapScroll"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:background="@drawable/dra_boton_imagen_fondo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"
            android:weightSum="1">

            <ImageButton
                android:background="?android:selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/BtnPedidoActualUbicar"
                android:src="@mipmap/icon_ubicar150"
                android:onClick="onClick_BtnPedidoActualUbicar"
                android:scaleType="fitCenter"
                android:layout_weight="3.43" />

            <TextView
                style="@style/est_boton_imagen_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Ubicar"
                android:id="@+id/textView51" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/dra_boton_imagen_fondo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"
            android:weightSum="1" >

            <ImageButton
                android:background="?android:selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/BtnPedidoActualMensajear"
                android:src="@mipmap/icon_mensaje150"
                android:onClick="onClick_BtnPedidoActualMensajear"
                android:scaleType="fitCenter"
                android:layout_weight="4.05" />

            <TextView
                style="@style/est_boton_imagen_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Mensajes"
                android:id="@+id/textView" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/dra_boton_imagen_fondo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"
            android:weightSum="1">

            <ImageButton
                android:background="?android:selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/BtnPedidoActualLlamar"
                android:src="@mipmap/icon_llamar150"
                android:onClick="onClick_BtnPedidoActualLlamar"
                android:scaleType="fitCenter"
                android:layout_weight="4.05" />

            <TextView
                style="@style/est_boton_imagen_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Llamar"
                android:id="@+id/textView53" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/dra_boton_imagen_fondo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"
            android:weightSum="1">

            <ImageButton
                android:background="?android:selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/BtnPedidoActualAlertar"
                android:src="@mipmap/icon_alertar150"
                android:onClick="onClick_BtnPedidoActualAlertar"
                android:scaleType="fitCenter"
                android:layout_weight="4.20" />

            <TextView
                style="@style/est_boton_imagen_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Alertar"
                android:id="@+id/textView54" />
        </LinearLayout>

    </LinearLayout>

    <fragment
        android:id="@+id/map1"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/CapBotones1"
        android:layout_above="@+id/CapBotones" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CapBotones"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:background="@drawable/dra_boton_imagen_fondo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"
            android:weightSum="1"
            android:id="@+id/CapPedidoActualAccion" >

            <ImageButton
                android:background="?android:selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/BtnPedidoActualAccionar"
                android:src="@mipmap/icon_acciones150"
                android:onClick="onClick_BtnPedidoActualAccionar"
                android:scaleType="fitCenter"
                android:layout_weight="8.40" />

            <TextView
                style="@style/est_boton_imagen_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Acciones"
                android:id="@+id/textView73" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/dra_boton_imagen_fondo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"
            android:weightSum="1"
            android:id="@+id/CapPedidoActualCancelar">

            <ImageButton
                android:background="?android:selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/BtnPedidoActualCancelar"
                android:src="@mipmap/icon_cancelar150"
                android:onClick="onClick_BtnPedidoActualCancelar"
                android:scaleType="fitCenter"
                android:layout_weight="8.40" />

            <TextView
                style="@style/est_boton_imagen_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Cancelar"
                android:id="@+id/textView61" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/dra_boton_imagen_fondo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center_horizontal"
            android:weightSum="1"
            android:id="@+id/CapPedidoActualFinalizar">

            <ImageButton
                android:background="?android:selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/BtnPedidoActualFinalizar"
                android:src="@mipmap/icon_ok150"
                android:onClick="onClick_BtnPedidoActualFinalizar"
                android:scaleType="fitCenter"
                android:layout_weight="8.55" />

            <TextView
                style="@style/est_boton_imagen_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Abordo"
                android:id="@+id/textView8" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
